<?xml version="1.0" encoding="utf-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <!-- Start and end colour of the gradient, plus the angle it flows (270 = start on top, end on bottom) -->
            <gradient
                android:startColor="@color/light_green"
                android:endColor="@color/green"
                android:angle="270" />
            <!-- Border -->
            <stroke
                android:width="1px"
                android:color="@color/dark_green" />
            <!-- rounded corners -->
            <corners
                android:bottomLeftRadius="4dp"
                android:bottomRightRadius="4dp"
                android:topLeftRadius="4dp"
                android:topRightRadius="4dp"/>
            <!-- Padding around text -->
            <padding
                android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
        </shape>
    </item>
</selector>